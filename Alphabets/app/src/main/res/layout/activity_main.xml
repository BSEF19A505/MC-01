<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CA1E1E"
    android:backgroundTint="#CA5D5D"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Inputalphabet"
        android:layout_width="390dp"
        android:layout_height="48dp"
        android:backgroundTint="#513131"
        android:ems="10"
        android:hint="Enter any alphabet"
        android:inputType="text"
        android:textColor="#1B1111"
        android:textColorHint="#251313"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.27" />

    <TextView
        android:id="@+id/outputtype"
        android:layout_width="395dp"
        android:layout_height="50dp"
        android:layout_marginTop="316dp"
        android:hint="alphabettype"
        android:textColorHint="#2C0B0B"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Inputalphabet" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="140dp"
        android:backgroundTint="#150F0F"
        android:text="Submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Inputalphabet" />

</androidx.constraintlayout.widget.ConstraintLayout>